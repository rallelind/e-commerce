{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/profilePage/profileInfo/ProfileInfo.tsx",
    "pages/api/product/upload-product.ts",
    "pages/api/product/user-products.js",
    "components/chat/ChatComponent.tsx",
    "postcss.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
